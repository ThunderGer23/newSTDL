<!-- Begin page -->
<div id="layout-wrapper">
    {{>headeremp}}
    {{>sidebaremp}}
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                        {{>pagetitle}}
                        <!-- end page title -->
                <div class="row">
                    <div class="col-12">
                        <div id="radioButtonTramite">
                            <span>Tipo de expediente: </span>&nbsp;&nbsp;
                            <span class="me-3">Externo</span> &nbsp; <input type="checkbox" id="externo"
                                onclick="javascript:Seleccionar();" class="form-check-input">
                            &nbsp;&nbsp;
                            <span class="me-3">Interno</span> &nbsp; <input type="checkbox" id="interno"
                                onclick="javascript:Seleccionar();" class="form-check-input">
                        </div>
                    </div>
                </div>
                <!-- end page title -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">
                                    Para crear los expedientes por favor seleccionar si es externo o interno
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="row justify-content-center">
                                    <div class="col-xl-12">
                                        <div class="row bt-4 ocultar" id="expedienteExterno" style="display: none;">

                                            <form action="">
                                                <div class="container">
                                                    <h4><b>Expediente externo</b></h4>
                                                    <div class="row mt-3">
                                                        <div class="col">
                                                            <label for="">Fecha de registro</label>
                                                            <input class="form-control" type="date" name="fecharegistro" id="fecharegistro">
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Número de expediente</label>
                                                            <input class="form-control" type="number" name="numexpediente" id="numexpediente">
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Oficina que registra</label>
                                                            <select class="form-control" name="oficinaregistrante" id="oficinaregistrante" required>
                                                                <option selected>Mesa de partes</option>
                                                                <option value="1">Gerencia</option>
                                                                <option value="2">Alcaldia</option>
                                                                <option value="3">Segretaria General</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="row mt-3">
                                                        <div class="col">
                                                            <label for="">Firma</label>
                                                            <input class="form-control" name="firmaext" id="firmaext" type="text" placeholder=""
                                                                required>
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Cargo</label>
                                                            <input class="form-control" name="cargoext" id="cargoext" type="text" placeholder="">
                                                        </div>
                                                    </div>
                                                    <div class="row mt-3">
                                                        <div class="col">
                                                            <label for="">Tipo de documento</label>
                                                            <select class="form-control" name="tipodocumentoext" id="tipodocumentoext" required>
                                                                <option selected>Carta</option>
                                                                <option value="1">Oficio</option>
                                                                <option value="2">Solicitud</option>
                                                                <option value="3">Autorización</option>
                                                            </select>
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Fecha del Documento</label>
                                                            <input type="date" name="fechadocumentoext" id="fechadocumentoext" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="row mt-3">
                                                        <div class="col">
                                                            <label for="">Número</label>
                                                            <input class="form-control" type="number" name="numeroext" id="numeroext"
                                                                onkeypress="return isNumberKey(event)">
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Siglas</label>
                                                            <input class="form-control" type="text" name="siglasext" id="siglasext">
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Folios</label>
                                                            <input class="form-control" name="foliosext" id="foliosext" type="number" required
                                                                minlength="1" maxlength="8"
                                                                onkeypress="return isNumberKey(event)">
                                                        </div>
                                                    </div>
                                                    <div class="row mt-3">
                                                        <div class="col">
                                                            <label for="">Asunto</label>
                                                            <textarea class="form-control" name="asuntoext" id="asuntoext" cols="5"
                                                                rows="2"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="row mt-3">
                                                        <div class="col">
                                                            <label for="">Anexo/Detalle</label>
                                                            <input class="form-control" type="text" name="anexodetalleext" id="anexodetalleext">
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Procedimiento TUPA</label>
                                                            <select class="form-control" name="procedimientotupaext" id="procedimientotupaext">
                                                                <option selected>Acceso a la información pública
                                                                </option>
                                                                <option selected>Acta de matrimonio</option>
                                                                <option selected>Solicitud de apertura de local</option>
                                                                <option selected>Acta de nacimiento</option>
                                                                <option selected>Acta de fallecimiento</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col">
                                                            <button class="btn btn-success">Guardar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="row mt-3 ocultar" id="expedienteInterno" style="display: none;">

                                            <form action="">
                                                <h4>Expediente Interno</h4>
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col">
                                                            <label for="">Fecha de registro</label>
                                                            <input class="form-control" type="date" name="fecharegistroint" id="fecharegistroint">
                                                        </div>
                                                        <div class="col">
                                                            <label for="">N° de expediente</label>
                                                            <input class="form-control" type="number" numexpedienteint>
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Oficina que registra</label>
                                                            <select class="form-control" name="oficinaregistranteint" id="oficinaregistranteint" required>
                                                                <option selected>Mesa de partes</option>
                                                                <option value="1">Mesa de partes</option>
                                                                <option value="2">Alcaldia</option>
                                                                <option value="3">Secretaria General</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="row mt-3">
                                                        <div class="col">
                                                            <label for="">Para firma de: </label>
                                                            <select class="form-control" name="parafirmaint" id="parafirmaint">
                                                                <option selected="">Nombre del encargado del área
                                                                </option>
                                                                <option value="1">en caso de pertenecer a más áreas
                                                                    aparecen aquí</option>
                                                            </select>
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Otros vistos</label>
                                                            <input class="form-control" type="text" name="otrosvistosint" id="otrosvistosint">
                                                        </div>
                                                    </div>
                                                    <div class="row mt-3">
                                                        <div class="col">
                                                            <label for="">Tipo de destino</label>
                                                            <select class="form-control" name="tipodestinoint" id="tipodestinoint">
                                                                <option value="1">Interno [Jefe de oficina]</option>
                                                                <option value="2">Interno [Trabajador]</option>
                                                                <option value="3">Externo o editar destinatario</option>
                                                            </select>
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Destino(s)</label>
                                                            <input class="form-control" type="text" name="destinoint" id="destinoint">
                                                        </div>
                                                    </div>
                                                    <div class="row mt-3 mb-3">
                                                        <div class="col-md-2">
                                                            <label for="">Número</label>
                                                            <input class="form-control" type="number" name="numeroint" id="numeroint">
                                                        </div>
                                                        <div class="col">
                                                            <label for="">Asunto:</label>
                                                            <input class="form-control" type="text" name="asuntonint" id="asuntonint">
                                                        </div>
                                                    </div>
                                                    <div class="row mt-4 mb-4">
                                                        <div class="col">
                                                            <label for="">Referencia contextual</label>
                                                            <input class="form-control" type="text" name="referenciacontextualint" id="referenciacontextualint">
                                                        </div>
                                                    </div>
                                                    <div class="row mb-3 mt-3">
                                                        <div class="col">
                                                            <label for="">Cuerpo</label>
                                                            <textarea name="cuerpoint" id="miEditor" cols="30"
                                                                rows="10"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col">
                                                            <input class="btn btn-success" type="button"
                                                                value="Guardar">
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- container-fluid -->
        </div>
        <!-- End Page-content -->
        {{>footer}}
    </div>
    <!-- end main content-->
</div>
<!-- END layout-wrapper -->





