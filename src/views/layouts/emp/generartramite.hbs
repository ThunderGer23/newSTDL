<!-- mostrar formulario según check de los radiobuttons -->
<script>
    function Seleccionar() {
        $('#externo').on('change', function (env) {
            env.preventDefault();
            $('#externo').prop("checked", true);
            $('#interno').prop("checked", false);


            document.getElementById("expedienteExterno").style.display = "block";
            document.getElementById("expedienteInterno").style.display = "none";
        });
        $('#interno').on('change', function (env) {
            env.preventDefault();
            $('#interno').prop("checked", true);
            $('#externo').prop("checked", false);

            document.getElementById("expedienteInterno").style.display = "block";
            document.getElementById("expedienteExterno").style.display = "none";
        });
    }
</script>
